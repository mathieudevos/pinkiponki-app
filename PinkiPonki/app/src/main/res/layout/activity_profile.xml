<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start">

    <!-- This is the actual application xml -->
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:adjustViewBounds="true"
                android:src="@drawable/google_thumb"
                android:layout_alignParentTop="true"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/profile_rating_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/profile_username"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="5000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:text="USERNAME"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_alignBottom="@id/profile_img"
                android:layout_marginBottom="8dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="218dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/profile_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First name"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/profile_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last name"
                        android:layout_weight="1"/>


                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/iron"
                    />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email@testor.com"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/iron"
                    />

                <TextView
                    android:id="@+id/profile_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/iron"
                    />

                <TextView
                    android:id="@+id/profile_created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Created at: 00BC (You are Christ)!"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/iron"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/profile_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1200"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/profile_maxrating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2400"
                        android:layout_weight="1"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/iron"
                    />

                <TextView
                    android:id="@+id/profile_clubs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clubs: ..."
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/iron"
                    />

                <TextView
                    android:id="@+id/profile_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Friends: ..."
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/iron"
                    />

                <TextView
                    android:id="@+id/profile_totalgames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total games: 1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </RelativeLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/profile_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:tint="@color/white"
            app:layout_anchor="@id/profile_img"
            app:layout_anchorGravity="bottom|end" />

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:background="@android:color/transparent"
            android:titleTextColor="@android:color/transparent"
            android:theme="@style/ToolbarStyle" />

    </android.support.design.widget.CoordinatorLayout>



    <!-- This is the drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/drawer_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawermenu"/>


</android.support.v4.widget.DrawerLayout>




